<h1>Edit user</h1>
<div id="addUserForm">
    <form method="POST" action="/user/add-user">

        {{#if message}}
        <div id="message">
            <p id="message">{{ message }}</p>
        </div>
        {{/if}}

        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" placeholder="Insert user complete name"><br>
        </div>



        <div class="form-group">
            <label for="email">Email:</label>
            <input type="text" id="emailInput" name="email" placeholder="Insert user email"
                pattern="^[a-zA-Z0-9.!#$%&â€™*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$"><br>
            <span id="error-email" style="color: red;"></span>
        </div>

        <div class="form-group">
            <label for="role">Role:</label>
            <select name="role">
                <option value="ADMIN_ROLE" class="roleOptions">
                    ADMIN_ROLE</option>
                <option value="USER_ROLE" class="roleOptions" selected>
                    USER_ROLE</option>
            </select>
            <br>
        </div>

        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="passowrdInput" name="password" placeholder="Insert a valid password"
                pattern="[A-Za-z0-9!?-]{8,12}"><br>
            <div class="error-password">
                <span id="error-password" style="color: red;"></span>
            </div>
            <input type="checkbox" id="showPasswordCheckbox" class="show-password-checkbox">
            <label for="showPasswordCheckbox" class="show-password-label">Show password</label><br>

        </div>




        <button type="submit" id="saveUserButton" title="Add new user">Save</button>

    </form>
</div>
<script src="/js/checkSignUpFormFields.js"></script>

<style>
    #addUserForm {
        display: flex;
        justify-content: flex-start;
        margin-bottom: 15px;
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f2f2f2;
        border: 1px solid #ccc;
        border-radius: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
    }

    #error-password {
        max-width: 100%;
        text-align: center;
    }

    input[type="text"],
    input[type="email"],
    input[type="password"] {
        width: 165%;
        height: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #fff;
        font-size: 16px;
        size: initial;
    }

    input[type="checkbox"] {
        display: inline-block;
        margin-left: 10px;
    }

    #saveUserButton {
        padding: 10px 20px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        display: block;
    }

    #saveUserButton:hover {
        background-color: #245f27;
    }

    #saveUserButton:disabled {
        background-color: #4d4d4d;
    }

    .error-password {
        display: block;
        max-width: 200px;
    }

    #message,
    .error-message {
        color: #ff0000;
        margin-bottom: 10px;
        border-radius: 5px;
    }

</style>