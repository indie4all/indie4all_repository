<h1>Edit user</h1>
<div id="editUserForm">
    <form method="POST" action="/user/edit/{{user._id}}">
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" value="{{user.name}}"><br>
        </div>

        <div class="form-group">
            <label for="email">Email:</label>
            <input type="text" id="emailInput" name="email" value="{{user.email}}"
                pattern="^[a-zA-Z0-9.!#$%&â€™*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$"><br>
            <span id="error-email" style="color: red;"></span>
        </div>

        <div class="form-group">
            <label for="role">Role:</label>
            <select name="role">
                <option value="ADMIN_ROLE" class="roleOptions" {{#isEqual user.role "ADMIN_ROLE" }}selected{{/isEqual}}>
                    ADMIN_ROLE</option>
                <option value="USER_ROLE" class="roleOptions" {{#isEqual user.role "USER_ROLE" }}selected{{/isEqual}}>
                    USER_ROLE</option>
            </select>
            <br>
        </div>

        <div class="form-group">
            <label for="status">Status:</label>
            <select name="status" id="status">
                <option value="true" {{#isEqual user.status true}}selected{{/isEqual}}>ACTIVE</option>
                <option value="false" {{#isEqual user.status false}}selected{{/isEqual}}>INACTIVE</option>
            </select>
            <br>
        </div>

        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="passowrdInput" name="password" value="{{user.password}}"
                pattern="[A-Za-z0-9!?-]{8,12}"><br>
            <div class="error-password">
                <span id="error-password" style="color: red;"></span>
            </div>
            <input type="checkbox" id="showPasswordCheckbox" class="show-password-checkbox">
            <label for="showPasswordCheckbox" class="show-password-label">Show password</label>
            <br>
        </div>

        <button type="submit" id="saveUserButton">Save</button>

    </form>
</div>
<script src="/js/checkSignUpFormFields.js"></script>

<style>
    #editUserForm {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 15px;
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f2f2f2;
        border: 1px solid #ccc;
        border-radius: 20px;
    }

    #saveUserButton:disabled {
        background-color: #4d4d4d;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
    }

    input[type="text"],
    input[type="email"],
    input[type="password"] {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #fff;
        font-size: 16px;
    }

    input[type="checkbox"] {
        display: inline-block;
        margin-left: 10px;
    }

    #saveUserButton {
        padding: 10px 20px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    #saveUserButton:hover {
        background-color: #245f27;
    }

    .error-password {
        display: block;
        max-width: 200px;
    }
</style>