        font-size: 14px;
        cursor: pointer;
    }

    .pagination__info {
        margin: 0 10px;
    }

    .pagination__button:hover {
        background-color: #ddd;
    }

    .hidden {
        display: none;
    }

    #userStatus {
        width: 15px;
        height: 15px;
        border-radius: 50%;
        margin: 10px;
    }

    .red {
        background-color: red;
    }

    .green {
        background-color: green;
    }

    #user {
        background-color: white;
    }

    .fill {
        display: flex;
        justify-content: center;
