
<link rel="stylesheet" href="/css/usersCards.css">
<div class="profile-section">
    <h2>Perfil de Usuario</h2>
    <div class="profile-details">
        <div class="profile-item">
            <label for="name">Nombre:</label>
            <input type="text" id="name" value="John Doe" disabled>
        </div>
        <div class="profile-item">
            <label for="email">Correo Electrónico:</label>
            <input type="email" id="email" value="johndoe@example.com" disabled>
        </div>
        <div class="profile-item">
            <label for="role">Rol:</label>
            <input type="text" id="role" value="Administrador" disabled>
        </div>
        <div class="profile-item">
            <label for="password">Contraseña:</label>
            <div>
                <input type="password" id="password" value="Hola" disabled>
                <input type="checkbox" id="showPasswordCheckbox" class="show-password-checkbox">
                <label for="showPasswordCheckbox" class="show-password-label">Mostrar contraseña</label>
            </div>
        </div>
    </div>
    <button id="editButton" class="edit-button">Editar</button>
    <div id="editButtonsContainer" style="display: none;">
        <button id="cancelButton" class="cancel-button">Cancelar</button>
        <button id="saveButton" class="save-button">Guardar</button>
    </div>
</div>

<script>
    var editButton = document.getElementById("editButton");
    var editButtonsContainer = document.getElementById("editButtonsContainer");
    var cancelButton = document.getElementById("cancelButton");
    var saveButton = document.getElementById("saveButton");

    //var inputs = document.getElementsByTagName("input");

    var nameInput = document.getElementById("name");
    var emailInput = document.getElementById("email");
    var roleInput = document.getElementById('role');
    var passowrdInput = document.getElementById('password');



    editButton.addEventListener("click", function () {
        enableInputs();
        toggleButtons();
    });

    cancelButton.addEventListener("click", function () {
        disableInputs();
        toggleButtons();
    });

    saveButton.addEventListener("click", function () {
        disableInputs();
        toggleButtons();
    });

    showPasswordCheckbox.addEventListener("change", function () {
        var passwordInput = document.getElementById("password");
        if (this.checked) {
            passwordInput.type = "text";
        } else {
            passwordInput.type = "password";
        }
    });

    function enableInputs() {
        nameInput.disabled = false;
        emailInput.disabled = false;
        roleInput.disabled = false;
        passowrdInput.disabled = false;
    }

    function disableInputs() {
        nameInput.disabled = true;
        emailInput.disabled = true;
        roleInput.disabled = true;
        passowrdInput.disabled = true;
    }

    function toggleButtons() {
        if (editButtonsContainer.style.display === "none") {
            editButton.style.display = "none";
            editButtonsContainer.style.display = "block";
        } else {
            editButton.style.display = "block";
            editButtonsContainer.style.display = "none";
        }
    }
</script>