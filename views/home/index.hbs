<script>

    fetchUnits();

    async function fetchUnits() {

        var apiUrl = 'unit/random?amount=36';

        fetch(apiUrl)
            .then(response => response.json())
            .then(data => {
                const apiResponse = data.response;

                if (apiResponse.flag == 0) {

                    //If there are not enoguth units, then hide the carousels
                    console.log('Not enough units');
                    var carouselUnitsDiv = document.getElementById("carouselUnits");
                    carouselUnitsDiv.remove();

                } else {

                    //If there are enoguth units, then show the carousels
                    showUnits(apiResponse.units);
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });

        const showUnits = (units) => {

            var carouselItems = document.querySelectorAll('.carousel-item');

            carouselItems.forEach((item, index) => {

                const cardDivCode = `<div class="card text-bg-dark" style="font-family: Arial,Helvetica,sans-serif; background-image: url(${units[index].cover}); background-size: cover; background-position: center center;" onclick="viewUnit('${units[index].resourceId}')">
                                        <img src="/assets/img/transparent-image.png" class="card-img opacity-75" style="width: auto; height: 450px;">
                                    <div class="card-img-overlay">
                                        <h5 class="card-title"><strong>${units[index].title}</strong></h5>
                                    </div>
                                </div>`;

                // <img src="${units[index].cover}" class="card-img opacity-75" style="width: auto; height: 450px;">

                const cardDivElement = document.createElement('div');
                cardDivElement.innerHTML = cardDivCode;

                item.appendChild(cardDivElement);

            });
        }
    }


    const viewUnit = async (resourceId) => {

        try {
            const generateUnit = await fetch(`/unit/generatecontent?resourceId=${resourceId}`);

            if (!generateUnit.ok) {
                throw new Error('Error while generating unit content');
            }

            const generatedUnitId = await generateUnit.json();

            if (!generatedUnitId.resourceId) {
                throw new Error('Resource Id retrieved is not valid');
            }

            window.open(`/${generatedUnitId.resourceId}`, '_blank').focus();

        } catch (error) {
            console.error('Error while viewing unit:', error);
        }
    };

</script>